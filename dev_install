# install/update a system from a ymake_dev2 updated source using yrsync_dev2

test "$1" != "update" -a "$1" != "new" && {
    echo "Usage: $0 [new|update]"
    exit 1
}

# update a system
test "$1" = "update" && {
    mount /dev/sdb5 /xdir
    shift
    yrsync_dev2 --mode update --nodev --blkdev /dev/sda -f /etc/fstab.main_sda --gentoo $*
    umount /xdir
}

# new install
test "$1" = "new" && {
    test -n "$2" || {
        echo "Missing size parameter! [128|256]"
        exit 1
    }
    SIZE="$2"
    shift; shift
    mount /boot/efi 2>&/dev/null
    yrsync_dev2 --mode new --blkdev /dev/sda -f /etc/fstab.main_sda --parted $SIZE --grub --delete "" -e "" -R "-ar --exclude" $*
    umount /boot/efi
}

