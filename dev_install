# install/update a system from a ymake_dev2 updated source using yrsync_dev2

# update a system
test "$1" = "update" && yrsync_dev2 --mode update --blkdev /dev/sda -f /etc/fstab.main_sda --gentoo $*

# new install on a 256GB disk
test "$1" = "new" && yrsync_dev2 --mode new --blkdev /dev/sda -f /etc/fstab.main_sda --parted 256 --gentoo $*

